@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-deck">
    @foreach (var employee in Model)
    {
        var photoPath = "~/images/" + (employee.PhotoPath ?? "noimage.jpg");
        <div class="card m-3" style="min-width:18rem; max-width:30.5rem;">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top" id="imageThumbnail" src="@photoPath" 
                 asp-append-version="true"/>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details"
                   asp-route-id="@employee.Id" class="btn btn-primary m-1">View</a>
                <a asp-action="edit" asp-controller="home"
                   asp-route-id="@employee.Id" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    }
</div>